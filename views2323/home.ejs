<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <% if (locals.error) { %>
    <h6><%= error %></h6>
    <% } %> <% if (locals.id) { %>
    <p>Url Generated : http://localhost:3001/url/<%= id %></p>
    <% } %>
    <h2>URL shortning service</h2>
    <div>
      <form action="/url" method="post">
        <label for="">Enter URL</label>
        <input name="url" type="text" placeholder="www.google.com" />
        <button type="submit">Generate</button>
      </form>
    </div>
    <form action="/logout" method="post">
      <button type="submit">logout</button>
    </form>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>Sr.No.</th>
          <th>ShortId</th>
          <th>Redirect</th>
          <th>No. of Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
